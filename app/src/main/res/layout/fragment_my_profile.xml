<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.setting.MyProfileFragment"
    android:padding="15dp"
    android:background="@color/donker">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProfile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/baseline_supervised_user_circle_24"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivProfile"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvEmailValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email@domain.com"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#F1F1F1"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvEmailValue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/tvAlamatValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="alamat"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAlamat"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#F1F1F1"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tvMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Telepon"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvAlamatValue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/tvMobileValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+62 853 1234 7301"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMobile"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#F1F1F1"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tvCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Negara"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvMobileValue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/tvCountryValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jl indonesia"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCountry"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#F1F1F1"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kota"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvCountryValue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/tvCityValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jl indonesia"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCity"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#F1F1F1"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:padding="5dp" />

    <Button
        android:id="@+id/btnSaveProfile"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/btn_masuk"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck"
        android:layout_marginBottom="100dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>